@model IEnumerable<ECommerce.Models.Product>
<body>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" style="object-fit: contain; height: 200px" />
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@product.Name</p>
                                <p class="card-title text-info">Marque <b>@product.Brand</b></p>
                            </div>                          
                            <div class="pl-1">
                                <p>Prix:<b>$@product.Price.ToString("C")</b></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>

    }
    </div>
</body>