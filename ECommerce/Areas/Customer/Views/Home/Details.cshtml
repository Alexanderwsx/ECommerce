@model ShoppingCart

<form method="post">
    <input hidden asp-for="ProductId" />
    <div class="container m-5">
        <div class="row flex-column flex-sm-row justify-content-center text-center">

            <div class="col-6 ">
                <img src="@Model.Product.ImageUrl" width=50% alt="Produit">
            </div>

            <div class="col-6 text-center">
                <h3>
                    @Model.Product.Name
                </h3>
                <p>Marque: @Model.Product.Brand</p>
                <hr />
                <h4>@Model.Product.Price.ToString("c")</h4>
                 <div class="row pl-2">
                             
                                <div class="col-8"><input asp-for="Count" class="form-control"  /></div>
                           
                <button type="submit" value="Ajouter au panier" class="btn btn-primary form-control">Ajouter au panier</button>
            </div>

        </div>
    </div>

    <div class="col-12 mb-4">
        <h3> À propos de cet article </h3>
        <p>@Html.Raw(Model.Product.Description)</p>
    </div>
</form>