@model Category

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="rom pb-2">
            <h2 class="text-primary">Modifier Categorie</h2>
            <hr />
        </div>
        @*  show all error message
        <div asp-validation-summary="All"></div>*@
     
        <div class="mb-3">
            <label>Nom</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Modifier</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-info" style="width:auto">
            Retourner à la liste
        </a>
    </div>

</form>

<!--add a validator side-client  -->
@section Scripts{
    @{
<partial name="_ValidationScriptsPartial"/>
    }
}